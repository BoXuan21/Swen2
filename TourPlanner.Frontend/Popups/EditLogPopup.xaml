<Window x:Class="TourPlanner.Frontend.Popups.EditLogPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Log" Height="450" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Edit Tour Log" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Date:" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0"/>
            <DatePicker Grid.Column="1" 
                        SelectedDate="{Binding Date}"/>
        </Grid>

        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Comment:" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0"/>
            <TextBox Grid.Column="1" 
                     Text="{Binding Comment}" 
                     Style="{StaticResource PlaceholderTextBox}"
                     Tag="Enter comment"/>
        </Grid>

        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Difficulty:" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0"/>
            <ComboBox Grid.Column="1" 
                      SelectedIndex="{Binding Difficulty}">
                <ComboBoxItem Content="Very Easy"/>
                <ComboBoxItem Content="Easy"/>
                <ComboBoxItem Content="Medium"/>
                <ComboBoxItem Content="Hard"/>
                <ComboBoxItem Content="Very Hard"/>
            </ComboBox>
        </Grid>

        <Grid Grid.Row="4" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Rating:" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0"/>
            <ComboBox Grid.Column="1" 
                      SelectedIndex="{Binding Rating}">
                <ComboBoxItem Content="1 Star"/>
                <ComboBoxItem Content="2 Stars"/>
                <ComboBoxItem Content="3 Stars"/>
                <ComboBoxItem Content="4 Stars"/>
                <ComboBoxItem Content="5 Stars"/>
            </ComboBox>
        </Grid>

        <Grid Grid.Row="5" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Duration:" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0"/>
            <TextBox Grid.Column="1" 
                     Text="{Binding Hours}" 
                     Style="{StaticResource PlaceholderTextBox}"
                     Tag="Hours"/>
            <TextBlock Grid.Column="2" 
                       Text=":" 
                       VerticalAlignment="Center" 
                       Margin="5,0"/>
            <TextBox Grid.Column="3" 
                     Text="{Binding Minutes}" 
                     Style="{StaticResource PlaceholderTextBox}"
                     Tag="Minutes"/>
        </Grid>

        <StackPanel Grid.Row="7" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Save" 
                    Command="{Binding SaveCommand}" 
                    Style="{StaticResource PrimaryButtonStyle}"
                    Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}" 
                    Style="{StaticResource BaseButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window> 