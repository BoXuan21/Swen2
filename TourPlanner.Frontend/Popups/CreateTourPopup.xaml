<Window x:Class="TourPlanner.Frontend.Popups.CreateTourPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Tour" Height="250" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Border Padding="20">
        <StackPanel>
            <TextBox Text="{Binding TourName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />
            <TextBox Text="{Binding From, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />
            <TextBox Text="{Binding To, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Create" Command="{Binding CreateCommand}" Margin="0,0,10,0"/>
                <Button Content="Cancel" Command="{Binding CancelCommand}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
